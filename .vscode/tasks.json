{
	"tasks": [
		{
			"label": "make (select)",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/${input:TargetSubDir}"
			},
			
			"command": "make",
			"args": [
				{
					"value": "${input:selectMakeTarget}",
					"quoting": "weak"
				}
			],
			"group": "build",
			"presentation": {
				"group": "make",
				"reveal": "always",
				"panel": "dedicated",
				"clear": false
			}
		},
		{
			"label": "make",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/${input:TargetSubDir}"
			},
			
			"command": "make",
			"args": [
				{
					"value": "all",
					"quoting": "weak"
				}
			],
			"group": "build",
			"presentation": {
				"group": "make",
				"reveal": "always",
				"clear": false
			}
        },
		{
			"label": "make-clean",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/${input:TargetSubDir}"
			},
			
			"command": "make",
			"args": [
				{
					"value": "clean",
					"quoting": "weak"
				}
			],
			"group": "build",
			"presentation": {
				"group": "make",
				"reveal": "always",
				"clear": false
			}
        },
		{
			"label": "make-clean-make-all",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/${input:TargetSubDir}"
			},
			
			"command": "make",
			"args": [
				"clean",
				"all"
			],
			"group": "build",
			"presentation": {
				"group": "make",
				"reveal": "always",
				"clear": false
			}
        },
	],
	"version":"2.0.0",
	"inputs": [
		{
			"type":"pickString",
			"id": "selectMakeTarget",
			"description": "What target do you want to create",
			"options": [
				"all",
				"flash",
				"clean",
				"clean all",
			],
			"default": "component"
		},
		{
			"type": "promptString",
			"id": "makeTarget",
			"description": "Name your target",
			"default": ""
		},
		{
			"type": "command",
			"id": "TargetSubDir",
			"command":"cpptools.activeConfigCustomVariable",
			"args": "TargetSubDir",
			//"description": "directory needed",
			//"default": "eigen/usart_irq_own"
		}
	]
}